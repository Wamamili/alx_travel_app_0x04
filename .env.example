# ALX Travel App - Environment Variables Template

# DEBUG mode (set to False in production)
DEBUG=False

# Secret key for Django (generate a secure one)
SECRET_KEY=your-secure-secret-key-here

# Database Configuration (Render provides DATABASE_URL)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# CORS Configuration
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (Gmail or your email service)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Celery & Redis Configuration
CELERY_BROKER_URL=redis://:password@redis-host:6379/0
CELERY_RESULT_BACKEND=redis://:password@redis-host:6379/1

# Chapa Payment Gateway
CHAPA_SECRET_KEY=your-chapa-secret-key

# Optional: Google Cloud or AWS keys if using cloud storage
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
